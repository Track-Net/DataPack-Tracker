<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7128F3"
    android:gravity="center"
    android:padding="20dp">

    <Button
        android:id="@+id/button_timepicker"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_bg_round"
        android:foregroundTint="@color/cardBackground"
        android:foreground="@drawable/ic_baseline_add_24"/>

    <Button
        android:id="@+id/button_cancle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:background="@drawable/button_bg_round"
        android:foregroundTint="@color/cardBackground"
        android:foreground="@drawable/ic_baseline_close_24" />

    <TextView
        android:id="@+id/textViewBTM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Alarm Set"
        android:textColor="@color/cardBackground"
        android:layout_margin="10dp"
        android:textSize="30sp" />

</LinearLayout>